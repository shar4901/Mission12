<div class="d-flex flex-column justify-content-center border-info">


    <h1 class="text-center m-2">Sign up for Timeslot</h1>

    <div class="row">

        @foreach (TimeSlot slot in ViewBag.AllTimeSlots)
        {
            <div class="col-4">
                <div class="bg-light p-2 m-2 text-center rounded" style="height:120px; border-radius:1rem; border-color:gray; border-style:solid">
                    <h3>
                        @slot.AppointmentDateTime.ToString("dddd, MMMMM d")
                    </h3>
                    <a asp-controller="Home" asp-action="AddAppointment" asp-route-timeId="@slot.AppointmentDateTime.ToString()" class="btn btn-sm btn-primary mt-1 "><h3> @slot.AppointmentDateTime.ToString("t")</h3></a>
                </div>

            </div>

        }
    </div>
